// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  name          String?
  image         String?
  passwordHash  String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  analyses      StockAnalysis[]
  feedback      Feedback[]
  analytics     Analytics[]
  watchlist     Watchlist[]
}

model StockSnapshot {
  id            String    @id @default(uuid())
  symbol        String
  date          DateTime
  open          Float
  close         Float
  high          Float
  low           Float
  volume        BigInt
  cachedAt      DateTime  @default(now())
  
  @@unique([symbol, date])
  @@index([symbol, date])
}

model StockAnalysis {
  id              String          @id @default(uuid())
  symbol          String
  intrinsicValue  Float
  currentPrice     Float
  valuationStatus String          // UNDERVALUED | FAIR | OVERVALUED
  analysisSummary String          @db.Text
  createdAt       DateTime        @default(now())
  userId          String?
  
  user            User?           @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([symbol, createdAt])
  @@index([userId])
}

model Feedback {
  id            String    @id @default(uuid())
  symbol        String
  isHelpful     Boolean
  createdAt     DateTime  @default(now())
  userId        String?
  
  user          User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([symbol])
  @@index([userId])
}

model Analytics {
  id            String    @id @default(uuid())
  userId        String?
  symbol        String
  eventType     String    // 'search', 'analysis', 'repeat_search'
  metadata      String?   @db.Text
  createdAt     DateTime  @default(now())
  
  user          User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, createdAt])
  @@index([symbol])
  @@index([eventType])
}

model RateLimit {
  id            String    @id @default(uuid())
  userId        String    @unique
  analysisCount Int       @default(0)
  lastReset     DateTime  @default(now())
  
  @@index([userId])
}

model Watchlist {
  id            String    @id @default(uuid())
  userId        String
  symbol        String
  createdAt     DateTime  @default(now())
  
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, symbol])
  @@index([userId])
  @@index([symbol])
}

